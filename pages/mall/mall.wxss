/* pages/mall/mall.wxss */
.container-header {
    width: 750rpx;
    height: 466rpx;
    background: linear-gradient(90deg, rgba(174, 170, 167, 1) 0%, rgba(235, 230, 226, 1) 49%, rgba(218, 224, 228, 1) 100%);
}

.swiper {
    padding: 15px;
}

.swiper image {
    border-radius: 16px;
}

.contact {
    width: 100%;
    background: #fff;
    margin-top: 25rpx;
}

.list {
    padding: 0 20rpx;
}

.list .item {
    width: 345rpx;
    margin-top: 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
}

.list .item .picture {
    width: 100%;
    height: 345rpx;
}

.list .item .picture image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx 10rpx 0 0;
}

.list .item .text {
    padding: 20rpx 17rpx 26rpx 17rpx;
    font-size: 30rpx;
    color: #222;
}

.list .item .text .jf {
    font-size: 22rpx;
    color: #aaa;
    margin-top: 7rpx;
}

.list .item .text .jf .jf-name {
    font-size: 38rpx;
    color: rgba(231, 163, 100, 1);
    display: flex;
}

.loadingicon {
    width: 100%;
    height: 130rpx;
}